<div class="box">
    <div class="view-cart"><a id="button-cart" class="button">Cart</a></div>
    <h1>Products</h1>
    <div class="products-box">
        {{#each products}}
            <div class="product-card">
                <h3>{{this.title}}</h3>
                <hr>
                <p>Category: {{this.category}}</p>
                <p>Description: {{this.description}}</p>
                <p>Price: $ {{this.price}}</p>
                <button id="button-create" onclick="addToCart('{{this._id}}')">Add to Cart</button>
            </div>
        {{/each}}
    </div>
    <div class="footer">
        {{#if prevLink.exist}}
            <a id="button-paginate" class="button" href="{{prevLink.link}}">Previous</a>
        {{/if}}
        {{#if nextLink.exist}}
            <a id="button-paginate" class="button" href="{{nextLink.link}}">Next</a>
        {{/if}}
    </div>
</div>

<script src="/js/ecommerce.js"></script>